\setbeamertemplate{title page}
{
%   \vbox{}
%    {\usebeamercolor[fg]{titlegraphic}\inserttitlegraphic\hfill\inserttitlegraphicii\par}
%   \vspace{1cm}
  \begin{centering}
    \vspace{-0.6cm}
    \begin{beamercolorbox}[wd=1.19\textwidth, sep=10pt,center]{title}
    \vskip7.5em
      \usebeamerfont{title}\inserttitle\par%
      \ifx\insertsubtitle\@empty%
      \else%
        \vskip1.25em%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    % \vskip1em\par
    \begin{beamercolorbox}[sep=2pt,center]{date}
      \usebeamerfont{date}\insertdate
    \end{beamercolorbox}%\vskip0.5em
  \end{centering}

  \vspace{2.8em}
  \begin{tabular}[t]{@{}l@{\hspace{3pt}}p{.32\textwidth}@{}}
    \usebeamerfont{author}\textbf{\insertauthor} \\
    \usebeamerfont{author}Prof. Carl Gwilliam \\
    \usebeamerfont{author}Dr. Monika Weilers \\
    \usebeamerfont{author}Prof. Monica D'Onofrio \\
    \usebeamerfont{institute}{\insertinstitute}
  \end{tabular}%
}
